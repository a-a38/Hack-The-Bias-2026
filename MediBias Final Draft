    <script>
        // Menu Toggle Logic
        function toggleMenu() {
            const overlay = document.getElementById('menuOverlay');
            overlay.style.display = overlay.style.display === 'flex' ? 'none' : 'flex';
        }

        // Section Switcher
        function showSection(id) {
            document.querySelectorAll('section').forEach(s => s.classList.remove('active'));
            document.getElementById(id).classList.add('active');
            toggleMenu();    // Close menu after selection
        }

        //Diagnostic Logic
        function toggleFollowUp(select, targetId) {
            const target = document.getElementById(targetId);
            target.classList.toggle("hidden", select.value !== "yes");
        }


        function toggleSexualHealth1() {
            const status = document.getElementById('activeStatus').value;
            document.getElementById('sexualHealthQuestions').className = (status === 'yes') ? '' : 'hidden';
        }

        function toggleSexualHealth2() {
            const status = document.getElementById('activeStatus').value;
            document.getElementById('bowel').className = (status === 'yes') ? '' : 'hidden';
        }

        function toggleSexualHealth3() {
            const status = document.getElementById('activeStatus').value;
            document.getElementById('urinary').className = (status === 'yes') ? '' : 'hidden';
        }

        function toggleSexualHealth4() {
            const status = document.getElementById('activeStatus').value;
            document.getElementById('familyHistory').className = (status === 'yes') ? '' : 'hidden';
        }

        function toggleSexualHealth5() {
            const status = document.getElementById('activeStatus').value;
            document.getElementById('periods').className = (status === 'yes') ? '' : 'hidden';
        }

        function toggleSexualHealth6() {
            const status = document.getElementById('activeStatus').value;
            document.getElementById('intercourse').className = (status === 'yes') ? '' : 'hidden';
        }

        function toggleSexualHealth7() {
            const status = document.getElementById('activeStatus').value;
            document.getElementById('miscarriage').className = (status === 'yes') ? '' : 'hidden';
        }

        function showFollowUp() {
            document.getElementById('followUpSection').className = '';
        }

        // Stats Logic
        const statsData = [
            { topic: "COVID-19 Vaccine", women: "50.4%", age: "18+", description: "COVID-19 vaccine trials and early safety monitoring did not systematically collect or report women-specific outcomes (e.g., menstrual or reproductive effects), despite women generally showing higher vaccine uptake than men. This led to delayed recognition of sex-related impacts and gaps in guidance for women."},
            { topic: "Ischemic Heart Disease", women: "35.37%", age: "20-64", description: "Heart disease surveillance and diagnosis historically rely on male-dominated data, leading to under-recognition of atypical female symptoms, like jaw or back pain, resulting in delayed treatment for women."},
            { topic: "Stage 2 Hypertension", women: "45.4%", age: "20-79", description: "Hypertension data and diagnostic standards are largely derived from male-centric research, contributing to underdiagnosis and delayed treatment in women despite similar or rising risk levels."},
            { topic: "ADHD", women: "33.24%", age: "0-18", description: "ADHD research and diagnostic criteria have historically focused on hyperactive/impulsive boys, causing girls with inattentive symptoms to be underdiagnosed and undertreated."},
            { topic: "Epilepsy", women: "49.74%", age: "20-64", description: "Research and monitoring of epilepsy often prioritize male patterns, meaning misinterpretation or negligence in womenâ€™s seizures."}

        ];

        function filterStats() {
            const val = document.getElementById('statSearch').value.toLowerCase();
            const filtered = statsData.filter(item => item.topic.toLowerCase().includes(val));      
            renderStats(filtered);
        }

        function renderStats(data) {
            const body = document.getElementById("statsTable");   //Target
            body.innerHTML = data.map(i => `
                <tr>
                    <td style="color: #111110"><b>${i.topic}</b></td>
                    <td style="color: #111110">${i.women}</td>
                    <td style="color: #111110">${i.age}</td>
                    <td style="color: #111110">${i.description}</td>
                </tr>
            `).join('');
        }


        //Grader Logic
        function calculateInclusivityGrade() {
            let score = 0;
            const w = parseInt(document.getElementById('womenCount').value) || 0;
            const m = parseInt(document.getElementById('menCount').value) || 0;

            if (w > 0 && m > 0 && w > m) score += Math.min(40, (m / w) * 40);
            if (w > 0 && m > 0 && m > w) score += Math.min(40, (w / m) * 40);
            if (w > 0 && m > 0 && m === w) score = 40;
            if (document.getElementById('g1').checked && w > 0 && m > 0) score += 20;
            if (document.getElementById('g2').checked && w > 0 && m > 0) score += 20;
            if (document.getElementById('g3').checked && w > 0 && m > 0) score += 20;

            let grade = score > 95 ? 'A+' : score > 90 ? 'A' : score > 85 ? 'A-' : score > 80 ? 'B+' : score > 75 ? 'B' : score > 70 ? 'B-' : score > 65 ? 'C+' : score > 60 ? 'C' : score > 55 ? 'C-' : score > 50 ? 'D+' : score > 45 ? 'D' : score > 40 ? 'D-' : score <= 0 ? 'N/A' : 'F';
            document.getElementById('gradeOutput').innerHTML = `<div class="result-box"><h3>Grade: ${grade}</h3><p>Inclusivity Score: ${Math.round(score)}/100</p></div>`;
        }
        // Initial Load
        renderStats(statsData);
    </script>
</body>

